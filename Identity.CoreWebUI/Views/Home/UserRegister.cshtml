@model ViewModelRegisterUser

@{
    ViewData["Title"] = "UserRegister";
    Layout = "~/Views/Shared/_LayoutSignInSignOut.cshtml";
}



<div class="login-main">
    <form class="theme-form" asp-action="UserRegister">
        <h4>Hesap Açın</h4>
        <div class="form-group">

            <div class="row g-2">
                <div class="col-6">
                    <label class="col-form-label" asp-for="Ad"></label>
                    <span asp-validation-for="Ad"></span>
                    <input class="form-control" asp-for="Ad" placeholder="Adınız">
                </div>
                <div class="col-6">
                    <label class="col-form-label" asp-for="Soyad"></label>
                    <span asp-validation-for="Soyad"></span>
                    <input class="form-control" asp-for="Soyad" placeholder="Soyadınız">
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="UserName"></label>
            <span asp-validation-for="UserName"></span>
            <input class="form-control" asp-for="UserName">
        </div>

        
        <div class="form-group">
            <label class="col-form-label" asp-for="Email"></label>
            <span asp-validation-for="Email"></span>
            <input class="form-control" asp-for="Email">

        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="Password"></label>
            <span asp-validation-for="Password"></span>
            <div class="form-input position-relative">
                @*<input class="form-control" type="password" name="login[password]" required="" placeholder="*********">*@
                <input class="form-control" asp-for="Password"  placeholder="*********">
                <div class="show-hide"><span class="show">                         </span></div>
            </div>
        </div>

         <div class="form-group">
            <label class="col-form-label" asp-for="ConfirmPassword"></label>
            <span asp-validation-for="ConfirmPassword"></span>
            <div class="form-input position-relative">
                @*<input class="form-control" type="password" name="login[password]" required="" placeholder="*********">*@
                <input class="form-control" asp-for="ConfirmPassword" placeholder="*********">
                <div class="show-hide"><span class="show">                         </span></div>
            </div>
        </div>

        <div class="ms-2" asp-validation-summary="ModelOnly">

        </div>
        <div class="form-group mb-0">
            @* <div class="checkbox p-0">
            <input id="checkbox1" type="checkbox">
            <label class="text-muted" for="checkbox1">Remember password</label>
            </div><a class="link" href="forget-password.html">Forgot password?</a>*@

            <div class="text-end mt-3">
                <button class="btn btn-primary btn-block w-100" type="submit">Hesap Oluştur </button>
            </div>
        </div>
        @* <h6 class="text-muted mt-4 or">Or Sign in with</h6>
        <div class="social mt-4">
        <div class="btn-showcase"><a class="btn btn-light" href="https://www.linkedin.com/login" target="_blank"><i class="txt-linkedin" data-feather="linkedin"></i> LinkedIn </a><a class="btn btn-light" href="https://twitter.com/login?lang=en" target="_blank"><i class="txt-twitter" data-feather="twitter"></i>twitter</a><a class="btn btn-light" href="https://www.facebook.com/" target="_blank"><i class="txt-fb" data-feather="facebook"></i>facebook</a></div>
        </div>*@
        <p class="mt-4 mb-0 text-center">Bir hesabınız var mı?<a class="ms-2" asp-action="UserLogin">Oturum Aç</a></p>
    </form>
</div>




