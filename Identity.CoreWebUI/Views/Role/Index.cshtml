@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="AddRole" asp-controller="Role" class="btn btn-success">Rol Ekle</a>

<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
          @if(Model.Count<=0)
            {
                <h4>Sistemde kayıtlı role bulunmamaktadır</h4>

            }
        </div>

        @if (Model.Count>0)
        {
            <div class="card-block row">
                <div class="col-sm-12 col-lg-12 col-xl-12">
                    <div class="table-responsive">
                        <table class="table table-light">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Role Name</th>
                                    <th scope="col">İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">1</th>
                                        <td>@item.Name	</td>
                                        <td><a class="btn btn-info" asp-action="UpdateRole" asp-route-id="@item.Id">Güncelle</a>	</td>
                                        <td><a class="btn btn-danger" asp-action="DeleteRole" asp-route-id="@item.Id">Sil</a>	</td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
