@model List<AppUser>

@{
    ViewData["Title"] = "UserList";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            @if (Model.Count <= 0)
            {
                <h4>Sistemde kayıtlı kullanıcı  bulunmamaktadır</h4>

            }
        </div>

        @if (Model.Count > 0)
        {
            <div class="card-block row">
                <div class="col-sm-12 col-lg-12 col-xl-12">
                    <div class="table-responsive">
                        <table class="table table-light">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Role Name(s)</th>
                                    <th scope="col">İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">1</th>
                                        <td>@(item.Ad)  @(item.Soyad)	</td>
                                        <td><RolGoster user-id="@item.Id"></RolGoster>	</td>
                                        <td><a class="btn btn-info" asp-action="AssignRole" asp-route-id="@item.Id">Role ata</a>	</td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        }
    </div>
</div>


